<section class="orders-show">
  <header class="page-header">
    <h1>Order Details</h1>
  </header>

  <div class="panel panel-default">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td><%= image_tag line_item.product.image.thumb.url, class: 'thumbnail' %></td>
            <td><%= line_item.product.name %><br><%= line_item.product.description %></td>
            <td><%= line_item.quantity %></td>
            <td><%= humanized_money_with_symbol line_item.product.price %></td>
            <td><%= humanized_money_with_symbol line_item.product.price * line_item.quantity %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">Final Amount:</th>
          <th><%= humanized_money_with_symbol @order.total_cents / 100.0 %></th>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="order-details">
    <h2>Order Information</h2>
    <p>Email: <%= @order.email %></p>
  </div>
</section>
